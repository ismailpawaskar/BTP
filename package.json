{
  "name": "app",
  "version": "0.0.1",
  "description": "Business Application",
  "dependencies": {
    "@sap/cds": "^4",
    "@sap/audit-logging": "^3",
    "@sap/hana-client": "^2",
    "@sap/xsenv": "^3",
    "@sap/xssec": "^3",
    "passport": "^0.4.1",

    "debug": "^4.3",
    "express": "^4"
  },
  "devDependencies": {
    "sqlite3": "5.0.0"
  },
  "scripts": {
    "start": "npx cds run"
  },
  "cds": {
    "requires": {
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "strategy": "mock",
          "users": {
            "joe": {
              "roles": [
                "Admin",
                "Viewer"
              ]
            },
            "julie": {
              "roles": [
                "Viewer"
              ]
            },
            "bob": {
              "roles": [
                "Viewer"
              ]
            }
          }
        }
      }
      ,
      "db": {
        "[production]": {
          "kind": "hana"
        },
        "[development]": {
          "kind": "sql"
        }
      }
    }
    ,
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}
